<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Fecha de venta</th>
      <th>Costo Total</th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td> <%= sale.id %> </td>
        <td><%= sale.date_sale %></td>
        <td><%= sale.total_cost %></td>
        <td><%= link_to 'Show', sale %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sale', new_sale_path %>
